FLASK_APP=server/app.py

# Configurações do Supabase
SUPABASE_URL=https://seu-projeto.supabase.co
SUPABASE_KEY=sua-chave-anon-key-aqui

# Configurações do Flask
FLASK_SECRET_KEY=gere-uma-chave-secreta-aqui
FLASK_ENV=development
PORT=3000

# Configurações do Google AI
GOOGLE_API_KEY=sua-chave-api-google-aqui

# Configurações de Segurança
MAX_CONTENT_LENGTH=5242880  # 5MB em bytes
SESSION_COOKIE_SECURE=True
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

# Configurações de Backup
BACKUP_ENABLED=true
BACKUP_INTERVAL=86400  # 24 horas em segundos
BACKUP_DIR=/app/backups

# Configurações de Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/keepai.log

# Configurações de Cache
CACHE_TYPE=redis
CACHE_REDIS_URL=redis://redis:6379/0
CACHE_DEFAULT_TIMEOUT=300  # 5 minutos em segundos

# Configurações de Métricas
METRICS_ENABLED=true
PROMETHEUS_MULTIPROC_DIR=/tmp
METRICS_PORT=9090

# Configurações do Nginx
NGINX_PORT=80
NGINX_SSL_PORT=443
