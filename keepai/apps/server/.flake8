[flake8]
max-line-length = 88
extend-ignore = E203, W503, E402, F403, F405
max-complexity = 10
exclude = 
    .git,
    __pycache__,
    build,
    dist,
    docs,
    tests/fixtures/*,
    *.pyc,
    *.egg-info,
    .eggs
per-file-ignores =
    __init__.py:F401,F403
    tests/*:F401,F811,F841
    conftest.py:F401,F811